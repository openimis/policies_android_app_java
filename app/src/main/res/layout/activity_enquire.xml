<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp" >



        <EditText
            android:id="@+id/etCHFID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/InsuranceNumber"
            android:maxLength="12"
            android:imeOptions="actionGo" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/btnScan"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:contentDescription="@string/Scan"
            android:src="@drawable/scan" />

        <ImageButton
            android:id="@+id/btnGo"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:src="@drawable/go"
            android:contentDescription="@string/Go" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/person"
            android:contentDescription="@string/Insuree"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/tvCHFID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/InsuranceNumber"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/InsureeName"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Gender"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BirthDate"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llListView"
        android:visibility="invisible"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/Green">

        <ListView
            android:id="@+id/listView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="@android:color/background_dark"
            android:choiceMode="none"
            android:divider="@color/Orange"
            android:dividerHeight="2dp"
            android:fadeScrollbars="true"></ListView>
    </LinearLayout>

</LinearLayout>
