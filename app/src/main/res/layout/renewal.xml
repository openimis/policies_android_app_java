<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.openimis.imispolicies.tz.co.exact.Renewal">



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <EditText
                android:id="@+id/etofficer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:inputType="text"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/Officer"
                android:longClickable="false"
                android:maxLines="1">

            </EditText>

            <!-- <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"> -->

            <EditText
                android:id="@+id/etCHFID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/InsuranceNumber"
                android:inputType="none|number"
                android:longClickable="false"
                android:maxLength="12"
                android:maxLines="1">


            </EditText>

            <!-- <ImageButton
                android:id="@+id/btnScan"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:contentDescription="@string/Scan"
                android:src="@drawable/scan" />

        </LinearLayout> -->

            <EditText
                android:id="@+id/etProductCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:inputType="none"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/ProductCode"
                android:longClickable="false"
                android:maxLines="1">

            </EditText>
            <Spinner
                android:id="@+id/spProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:id="@+id/etOfficer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/Payer"
                android:visibility="gone"
                >

                <requestFocus />

            </AutoCompleteTextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/PolicyValue"
                android:id="@+id/txtPolicyValue"
                android:longClickable="false"
                android:cursorVisible="false"
                android:inputType="numberDecimal"
                android:focusableInTouchMode="false"/>
            <EditText
                android:id="@+id/etReceiptNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ReceiptNo"
                android:inputType="text"
                android:maxLines="1">

                <requestFocus />

            </EditText>

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/Amount"
                android:inputType="number"
                android:maxLines="1">

            </EditText>
            <Spinner
                android:id="@+id/spPayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
             <CheckBox
                android:id="@+id/chkDiscontinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="@string/DiscontinuePolicy"
                android:textColor="@color/Red" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Save" />
        </LinearLayout>


    </ScrollView>

    <!--Following attributes were removed from btnSubmit-->
